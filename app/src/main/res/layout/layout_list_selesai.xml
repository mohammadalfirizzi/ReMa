<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#dcdddd"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardElevation="0dp"
        android:id="@+id/kotakan2"
        android:layout_below="@id/rincian">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/texttopup"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="ID  2103923113"/>
            <TextView
                android:id="@+id/textuang"
                android:textColor="#000"
                android:layout_margin="10dp"
                android:text="Rp 35.000,-"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        app:cardBackgroundColor="#f8f7f8"
        app:cardElevation="0dp"
        android:id="@+id/kotakan"
        android:layout_marginBottom="20dp"
        android:layout_height="100dp"
        android:layout_below="@id/kotakan2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/mandiri"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/trftext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@id/mandiri"
                android:text="Transfer Via Bank"
                android:textColor="#000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignStart="@+id/mandiri"
                android:layout_below="@+id/mandiri"
                android:layout_marginRight="10dp"
                android:background="#F00"
                android:text="Selesai"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="8sp" />




        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
